    "@types/colors": "^1.1.3",
    "@types/dateformat": "^1.0.1",
    "@types/debug": "0.0.30",
    "@types/ejs": "^2.6.0",
    "@types/email-templates": "^3.5.0",
    "@types/express": "^4.11.1",
    "@types/i18n": "^0.8.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/lodash": "^4.14.104",
    "@types/mongoose": "^5.0.2",
    "@types/morgan": "^1.7.35",
    "@types/nconf": "0.0.37",
    "@types/node": "^7.0.50",
    "@types/nodemailer": "^4.6.0",
    "@types/pug": "^2.0.4",
    "@types/request-promise": "^4.1.41",
    "@types/statuses": "^1.3.0",
    "@types/type-is": "^1.6.2",
