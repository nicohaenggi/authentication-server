  "dependencies": {
    "basic-auth": "^2.0.0",
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "colors": "^1.1.2",
    "dateformat": "^3.0.3",
    "debug": "^3.1.0",
    "ejs": "^2.6.1",
    "email-templates": "^4.0.1",
    "express": "^4.16.2",
